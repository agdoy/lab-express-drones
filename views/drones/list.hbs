<h2>Available drones</h2>

<a href="/drones/create" class="btn btn-success"> + Add new drone</a>

{{#each dronesDB}}
<hr>
<div class="container">
    <div class="row">
        <div class="col">
            <h5>{{name}}</h5>
            <a href="/drones/{{_id}}/edit" class="btn btn-warning">Edit</a>
            <form action="/drones/{{_id}}/delete" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        <div class="col">
            <hr>
            <h6>Propeller:</h6>{{propellers}}
            <h6>Max Speed:</h6>{{maxSpeed}}KM / H


        </div>
    </div>
</div>
{{/each}}


